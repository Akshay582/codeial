<header>
    <h1 id="header-website-name">
        codeial
    </h1>
    <% if(locals.user) {%>
    <i class="fas fa-user-circle fa-2x header-user-icon"></i>
    <% } %>
    <ul id="header-list">
        <% if(locals.user) {%>
            <li>
                <a href="/users/profile/<%= locals.user._id%>">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign out</a>
            </li>
        <%} else {%>
            <li>
                <a href="/users/sign-in">Sign In</a>
            </li>
            <li>
                <a href="/users/sign-up">Sign Up</a>
            </li>
        <% } %>
    </ul>
</header>